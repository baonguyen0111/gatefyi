<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset ="utf-8"/>
		<title>Gatefyi</title>
		
		<!-- Bootstrap CSS -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
		
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>

		<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>

	<body>
		<div class="container-fluid">
			<div class="row" id="header">
				<div class="col-md-4">
					<%= image_tag("gatefyilogo.png", height: 100, alt:"gatefyi logo") %>
				</div>
				<% if admin_signed_in? %>
					 <div class="col-md-2 offset-md-6">
						<%= link_to t("logout"), destroy_admin_session_path, method: :get, :class => "btn btn-warning btn-sm" %>
					</div>
				<% else %>
					<div class="col-md-2 offset-md-6">
						<%= link_to "Log in as admin", admin_google_oauth2_omniauth_authorize_path, :class => "btn btn-sm btn-primary" %>
					</div>
				<% end %>
			</div>
			<br/>
			<div class="row">
				<% if admin_signed_in? %>
				  <div class="col-md-4 alert alert-light">
				    <span>
				      <%= "Welcome #{current_admin.email}" %>
				    </span>
				    <span>(admin user)</span>
				  </div>
				<% end %>
			</div>
			<br/>
			<% if flash[:notice] %>
				<div class="row">
					<div class="col-md-4 alert alert-primary notice">
						<%= "#{flash[:notice]}" %>
					</div>
				</div>
			<% end %>
			<% if flash[:alert] %>
				<div class="row">
					<div class="col-md-4 alert alert-warning alert">
						<%= "#{flash[:alert]}" %>
					</div>
				</div>
			<% end %>
			<% if flash[:success] %>
				<div class="row">
					<div class="col-md-4 alert alert-success success">
						<%= "#{flash[:success]}" %>
					</div>
				</div>
			<% end %>
		</div>
		<%= yield %>
	</body>
</html>
