<%= image_tag("gatepics.png", class: "gate-pics") %>
<div class="header">
	<div class="flex-item">
		<div><%= link_to "About Us", about_path %> </div>
	</div>
	<div class="flex-item">	
		<div><%= link_to "How to use", how_path %> </div>
	</div> 
</div>
<div class="container-fluid index-page">
	<div class="row">
		<div class = "offset-md-2">
			<%= image_tag("gatefyilogo.png", height: 100, alt:"gatefyi logo") %>
		</div>
	</div>
	<br/>
	<% if flash[:notice] %>
		<div class="row">
			<div class="col-md-13 alert alert-primary notice">
				<%= "#{flash[:notice]}" %>
			</div>
		</div>
	<% end %>
	<% if flash[:alert] %>
		<div class="row">
			<div class="col-md-13 alert alert-warning alert">
				<%= "#{flash[:alert]}" %>
			</div>
		</div>
	<% end %>

	<% if user_signed_in? %>
		<div class="row">
			<%= link_to "Enter our page", articles_path, method: :get, :class => "btn btn-warning btn-sm" %>
		</div>
	<% else %>
		<div class="row">
			<%= link_to "Sign in through Google",user_google_oauth2_omniauth_authorize_path , :class => " google-card text-white card bg-success mb-3 " %>

		</div>
	<% end %>
</div>
