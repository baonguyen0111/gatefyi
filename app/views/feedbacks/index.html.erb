<div class="row">
    <div class="col-md">
	<h4>
		    All your past feedbacks
      </h4>
    </div>
</div>
<!--Back to main page-->
<div class="text-right mr-4">
    <%= link_to articles_path, :class =>"text-decoration-none" do %>
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
        </svg>
        Back to main page
    <% end %>      
</div>
<div class="feedback-list">
	<table class="table table-borderless">
		<thead>
			<th> Content </th>
			<th> Status </th>
		</thead> 
		<tbody>
			<% @feedbacks.each do |f| %>
				<tr>
					<td>
						<%= "#{f.content}" %> 	
					</td> 
				</tr>
				<tr>
					<td>
						<% if f.resolved %>
							<div> Resolved </div> 
						<% else %>
						 	<div> Not resolved </div> 
						<% end %>
					</td> 
				</tr> 
		        <% end %>
		</tbody>
	</table>
</div>
<div class="mr-4">
<div class="row"> Post a feedback </div>
<%= form_with model: @feedback, url: feedbacks_path, method: :post, local: true, :class => "form-horizontal center" do |f| %>
	<div class="form-row">
		<div class="form-group col-md-6">
			<%= f.label :content, "Comment:", class: "col-md-4 control-label" %>
			<div class="col-md-8">
				<%= f.text_field :content, class: "form-control" %>
			</div>
		</div>	
	</div>
	<span style="margin-left: 30%">
		<%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
	</span>
<% end %>
</div>
