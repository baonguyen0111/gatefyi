<div class="col-md">
      <h4>
      	Add a comment
      </h4>
    </div>
</div>
<!--Back to main page-->
<div class="text-right mr-4">
    <%= link_to articles_path, :class =>"text-decoration-none" do %>
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
        </svg>
        Back to main page
    <% end %>      
</div>
<div class="mr-4">
<%= @comment = @arr[1] %>
<%= form_with model: @comment, url: article_comments_path(@arr[0]), method: :post, local: true, :class => "form-horizontal center" do |f| %>
	<div class="form-row">
		<div class="form-group col-md-6">
			<%= f.label :content, "Comment:", class: "col-md-4 control-label" %>
			<div class="col-md-8">
				<%= f.text_field :content, class: "form-control" %>
			</div>
		</div>	
	</div>
	<%= f.hidden_field :article_id, value: @arr[0] %>
i	<span style="margin-left: 30%">
		<%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
	</span>
<% end %>
</div>

