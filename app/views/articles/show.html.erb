<div class="row">
    <div class="col-md">
      <h4 class="articlecompany">
        <%= "Internship experience at #{@article.company}" %>
      </h4>
      <h3>
	      <% if @owner.show_profile %> 
		      Posted by <%= link_to "#{@owner.displayname}", user_path(@owner) %>
      		<% else %>
	      		<%= "#{@owner.displayname}" %>
      		<% end %>
      </h3> 
    </div>
</div>
<div class="ml-4"> 
    <!--Upvote-->
    <span id="upvote">
      <%= link_to article_path(@article, :vote_change => 1), :method => :put do %>
          <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-up" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
          </svg>
      <% end %>
    </span>
    
    <span id="upvoteCount"><%= @article.upvotes %></span>
    
    <!--Downvote-->
    <%= link_to article_path(@article, :vote_change => -1), :method => :put do %>
        <svg id="downvote" width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-down" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1z"/>
        </svg>
    <% end %>        
</div>
<!--Back to main page-->
<div class="text-right mr-4">
    <%= link_to articles_path, :class =>"text-decoration-none" do %>
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
        </svg>
        Back to main page
    <% end %>      
</div>
<br>
<table class="table table-borderless">
  <tbody>
    <tr>
      <th scope="row">Location</th>
      <td><%= @article.city%>, <%= @article.state %></td>
    </tr>
    <tr>
      <th scope="row">Industry</th>
      <td><%= @article.industry_type %></td>
    </tr>
    <tr>
      <th scope="row">Compensation</th>
      <td><%= number_to_currency(@article.compensation) %></td>
    </tr>
    <tr>
      <th scope="row">Interview Experience</th>
      <td><%= @article.interview_exp %> </td>
    </tr>
    <tr>
      <th scope="row">Work Experience</th>
      <td><%= @article.work_exp %> </td>
    </tr>
  </tbody>
</table>
<br>
<div> <%= link_to "View all post comments", article_comments_path(@article) %> </div> 
